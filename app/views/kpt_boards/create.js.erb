<% if @kpt_board.persisted? %>
  $("#kpt_board_title").val("");
  $("#kpt_board_editor").hide("normal");
  $("#kpt_boards").prepend("<%= escape_javascript(render @kpt_board) %>")
                  .children("div:first").hide().show("blind",{ direction:"vertical" });
<% else %>
  $("#kpt_board_editor form").effect("shake");
<% end %>
